@page "/status"

<AntiforgeryToken/>

@if (IsLoading)

{
    <MudGrid Justify="Justify.Center" Style="height: 80vh; align-items: center;">
        <MudItem>
            <MudProgressCircular Color="Color.Default" Size="Size.Large" Indeterminate="true"/>
        </MudItem>
    </MudGrid>
}
else
{
    <MudDataGrid Items="_queueItems">
        <Columns>
            <PropertyColumn Property="x => x.Student.StudentNo" Title="Student ID"/>
            <PropertyColumn Property="x => x.Student.FirstName"/>
            <PropertyColumn Property="x => x.QueueType.Name"/>
        </Columns>
    </MudDataGrid>
}
